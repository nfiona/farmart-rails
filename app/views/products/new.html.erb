<h1>Add Product</h1>

<%= form_for [@vendor, @product] do |f| %>

<p><%= f.label :category %><br>
<%= f.text_field :category %></p>

<p><%= f.label :name %><br>
<%= f.text_field :name %></p>

<p><%= f.label :amount %><br>
<%= f.number_field :amount %></p>

<p><%= f.label :unit_of_measure %><br>
<%= f.text_field :unit_of_measure %></p>

<p><%= f.label :photo_url %><br>
<%= f.text_field :image %></p>

<p><%= f.label :description %><br>
<%= f.text_area :description %></p>

  <%= f.submit %>
<% end %>
